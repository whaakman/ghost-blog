{{!-- Section to display the Ghost subscribe form --}}
{{#if @labs.subscribers}}
<section class="newsletter-box inner-wide">
	<div class="inner">
		<h2 class="newsletter-box-title">{{t "Subscribe to {blogtitle}" blogtitle=@blog.title}}</h2>
		<p>{{t "Get the latest and greatest from {blogtitle} delivered straight to your inbox every week." blogtitle=@blog.title}}</p>
		{{subscribe_form form_class="gh-subscribe-form" button_class="button" placeholder=(t "Your email address")}}
	</div><!-- .inner -->
</section><!-- .newsletter-box -->
{{/if}}
